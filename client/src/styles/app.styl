$colorBlack = #001a1f
$colorWhite = #fff
$colorGrey = darken(#bdbdbd, 12%)
$colorGreyDark = darken($colorGrey, 38%)
$colorGreyLight = lighten($colorGrey, 20%)

body
  margin-top: 2rem
  margin-bottom: 2rem

.invisible
  display: none

.file-drop-zone
  border: 2px dashed $colorGreyLight
  margin-bottom: 1rem
  transition: .3s border-color

.file-drop-zone--active
  border-color: $colorGreyDark

.file-drop-zone--hidden
  display: none

.file-drop-zone__tip
  color: $colorGreyLight
  text-align: center
  line-height: 1.5
  font-size: 1.25rem
  padding: 36px 12px 16px
  transition: .3s color

.file-drop-zone--active .file-drop-zone__tip
  color: $colorGreyDark

.file-drop-zone__tip-icon
  display: block
  font-size: 3rem

.file-drop-zone__tip p
  margin-bottom: 0
  line-height: 2

.file-drop-zone__tip button
  margin: 6px 0 0 0

.uploaded-image
  position: relative
  margin-bottom: 1.5rem

.uploaded-image__remove-button
  background: $colorBlack
  border-radius: 4px
  color: $colorWhite
  cursor: pointer
  padding: 0
  margin: 0
  line-height: 1.5
  position: absolute
  top: .25rem
  right: .25rem
  width: 1.5rem
  height: 1.5rem
  opacity: .4
  transition: .3s background, .3s opacity

.uploaded-image:hover .uploaded-image__remove-button
  opacity: .6

.uploaded-image:hover .uploaded-image__remove-button:hover
  opacity: 1

.progress-bar
  background: #333
  width: 100%
  min-height: 4rem
  position: fixed
  bottom: 0
  left: 0

.progress-bar__remaining-count
  font-size: 1rem
  padding-top: 1.375rem
  line-height: 1
  color: #fff

.progress-bar__line
  padding-top: 1rem
